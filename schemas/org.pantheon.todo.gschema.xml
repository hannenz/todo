<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<schema id="org.pantheon.todo" path="/org/pantheon/todo/">
		<key type="b" name="show-completed">
			<default>true</default>
			<summary>Show completed</summary>
			<description>Whether to show completed tasks or not</description>
		</key>
		<key type="b" name="show-statusbar">
			<default>false</default>
			<summary>Show statusbar</summary>
			<description>Whether to show the statusbar</description>
		</key>

		<key type="s" name="todo-txt-file-path">

			<default>""</default>
			<summary>todotxt file path</summary>
			<description>Path to the todotxt file to use</description>
		</key>
	</schema>
</schemalist>

